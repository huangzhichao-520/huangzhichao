/* pages/read-detail/read-detail.wxss */
.collection,.share{
    width:100rpx;
    height: 100rpx;
}
.bg{
    width:100%;
    height: 400rpx;
}
.music{
    width:80rpx;
    height: 80rpx;
    position: absolute;
    top:200rpx;
    left:50%;
    transform: translateX(-50%);
}
.detail{
    height: 70rpx;
    display: flex;
    align-items: center;
    color: #666;
}
.detail view{
    margin-left: 30rpx;
}
.detail image{
    width:60rpx;
    height: 60rpx;
}
.title{
    width: 100%;
    display: inline-block;
    padding-bottom: 30rpx;
    color: #4B556C;
    padding-top: 20rpx;
    font-weight: bold;
    font-size: 40rpx;
}
.collect-share{
    float: right;
}
.share{
    margin-left: 30rpx;
}
.text-detail{
    margin-top: 140rpx;
    color: #666;
}